<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissable fade show col-6 offset-3 d-flex justify-content-between align-items-center"
>
  <span><%= success %></span>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissable fade show col-6 offset-3 d-flex justify-content-between align-items-center"
>
  <span><%= error %></span>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %>
